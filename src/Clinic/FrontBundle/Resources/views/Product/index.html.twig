{# src/Clinic/FrontBundle/Resources/views/Brand/index.html.twig #}
{% extends "ClinicFrontBundle::main.html.twig" %}

{% block title %}{{ parent() }} - Nos marques{% endblock %}


{% block front_body %}
    {#Display brands slider#}
    {{ include('ClinicFrontBundle:Product:productslider.html.twig') }}
    {#Search form #}
    <div class="search-form">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div class="pull-right">
                        <form action="#" role="form" class="pull-right">
                            <input type="text" class="input-search" placeholder="Search and hit enter">
                            <button type="submit" class="hidden"></button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Products list #}
    <section class="shop-section section-page section-white">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div class="toolbar-shop">
                        <div class="btn-group shop-ordering">
                            <button type="button" class="btn btn-b br2 dropdown-toggle" data-toggle="dropdown">
                                <span class="mr10">Trier par </span> <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="#">Name</a></li>
                                <li><a href="#">Price</a></li>
                                <li><a href="#">Sales</a></li>
                                <li><a href="#">Rating</a></li>
                            </ul>
                        </div>
                        <div class="shop-ordering">
                            <button type="button" class="btn btn-b br2" data-toggle="tooltip" title="Sort ascending"><i class="fa fa-sort-amount-asc"></i></button>
                        </div>
                        <div class="btn-group shop-ordering hidden-xs">
                            <button type="button" class="btn btn-b br2 dropdown-toggle" data-toggle="dropdown">
                                <span class="mr10">Afficher 10 produits</span> <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="#">Afficher 10 produits</a></li>
                                <li><a href="#">Afficher 15 produits</a></li>
                                <li><a href="#">Afficher 20 produits</a></li>
                                <li><a href="#">Afficher 25 produits</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="row">
                        {%  for key, categoryProducts in categoriesProducts %}
                            <section class="white-section">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <h2 class="title-border">{{ categoryProducts.category.title }}</h2>
                                        </div>
                                    </div>
                                </div>
                            </section>
                            {%  for product in categoryProducts.products %}
                                <div class="col-sm-6 col-md-3 ">
                                    <div class="shop-product">
                                        <a href="shop_product_sidebar.html" class="shop-image">
                                            <img src="{% path product.picture, 'small' %}">
                                            <div class="shop-prices">
                                                <ins class="shop-price">{{ product.price }}â‚¬</ins>
                                            </div>
                                        </a>
                                        <h4 class="shop-description">{{ product.title }}</h4>
                                    </div>
                                </div>
                            {% endfor %}
                        {% endfor %}
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <ul class="pagination pagination-2 dark">
                                <li class="disabled"><a href="#"><i class="fa fa-chevron-left"></i></a></li>
                                <li class="active"><a href="#">1</a></li>
                                <li><a href="#">2</a></li>
                                <li><a href="#">3</a></li>
                                <li><a href="#">4</a></li>
                                <li><a href="#">5</a></li>
                                <li><a href="#"><i class="fa fa-chevron-right"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}